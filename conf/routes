# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /listPlaces                 controllers.Application.listPlaces
# Favourite a studio
POST    /users/:userEmail/:password   controllers.User.add(userEmail: String, password: String)
DELETE  /users/:userEmail/:password   controllers.User.remove(userEmail: String, password: String)
GET     /users/:userEmail/:password   controllers.User.find(userEmail: String, password: String)
GET     /users/:userEmail             controllers.User.findAll(userEmail: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

